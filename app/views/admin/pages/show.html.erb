<div class="container">
	<div class="row">
		<div class="col-md-12">
 			<%= flash_messages %>
 			<div class="panel panel-default">
				<div class="panel-heading">
					<strong><%= @page.title %></strong>
				</div>
				<div class="panel-body">
				<p>
					<%= sanitize(@page.body,tags: %w(b)) %>
					<%= image_tag @page.image.thumb.url %>
				</p>  					
				</div>
			</div>
		<div class="well">
			 <p>
			 	<strong>Slug:</strong>
  				<%= @page.slug %>
			</p>
		</div>
		<%= link_to 'Edit', edit_admin_page_path(@page) %> |
		<%= link_to 'Back', admin_pages_path %>
		</div>
	</div>
</div>

