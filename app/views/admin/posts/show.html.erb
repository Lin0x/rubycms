<div class="container">
	<div class="row">
		<div class="col-md-12">
 			<%= flash_messages %>
 			<div class="panel panel-default">
				<div class="panel-heading">
					<strong><%= @post.title %></strong>
				</div>
				<div class="panel-body">
				<p>
					<%= sanitize(@post.body,tags: %w(b)) %>
					<%= image_tag @post.image.thumb.url %>
				</p>  					
				</div>
			</div>
		<div class="well">
			 <p>
  				<strong>دسته بندی:</strong>
  				<% if @post.category.present? %>
  					<em> <%= link_to @post.category.name.to_s,category_path(@post.category.id) %> </em>
  				<% else %>
  					<em> دسته بندی نشده </em> 
  				<% end %>
			</p>
		</div>
		<%= link_to 'Edit', edit_admin_post_path(@post) %> |
		<%= link_to 'Back', admin_posts_path %>
		</div>
	</div>
</div>