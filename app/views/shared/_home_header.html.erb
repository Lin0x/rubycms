    <header id="header">
        <div class="top-bar wow fadeIn">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-xs-4">
                        <div class="top-number"><p><i class="fa fa-phone-square"></i>          ۰۲۱-۸۸۳۳۶۲۱          (-: همواره پاسخگوی شما هستیم</p></div>
                    </div>
                    <div class="col-sm-4">
                        <% if signed_in? %>
                                <div class="pull-left">
                                    <ul class="nav">
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                              کاربر گرامی <%= sanitize(current_user.name.to_s) %> خوش آمدید<b class="caret"></b>
                                            </a>
                                            <ul class="dropdown-menu">
                                            <% if current_user.admin? %>
                                                <li>
                                                    <a href="/admin"> <i class="icon-cog"></i>
                                                        صفحه مدیریت
                                                    </a>
                                                </li>
                                            <% end %>
                                                <li>
                                                    <a href="/help/support">
                                                        <i class="icon-envelope"></i>
                                                        پروفایل شما
                                                    </a>
                                                </li>
                                                <li class="divider"></li>
                                                <li>
                                                    <%= link_to "خروج", destroy_user_session_path, :method => :delete %>
                                                        <i class="icon-off"></i>
                                                </li>
                                                <li>
                                                    <%= gravatar_image_tag current_user.email, "محیط کاربری" %>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                        <% else %>
                            <%= link_to "وارد شوید" , user_session_path %> | <%= link_to "ثبت نام کنید", new_user_registration_path %>
                        <% end %>
                    </div>
                    <div class="col-sm-4 col-xs-8">
                       <div class="social">
                            <ul class="social-share">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li> 
                                <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                <li><a href="#"><i class="fa fa-skype"></i></a></li>
                            </ul>
                            <!-- top search widget
                            <div class="search">
                                <form role="form">
                                    <input type="text" class="search-form" autocomplete="off" placeholder="Search">
                                    <i class="fa fa-search"></i>
                                </form>
                           </div>
                           -->
                       </div>
                    </div>
                </div>
            </div><!--/.container-->
        </div><!--/.top-bar-->

        <nav class="navbar navbar-inverse" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="index.html">سپهر تک</a>
                </div>
				
                <div class="collapse navbar-collapse navbar-left">
                    <ul class="nav navbar-nav">
                    <% Menu.all.each do |menu| %>
                        <% if menu.mitems.present? %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= menu.name %> <i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <% menu.mitems.each do |item| %>
                                    <li><a href="<%= item.url %>"><%= item.title %></a></li>
                                <% end %>
                            </ul>
                        </li>
                        <% else %>
                            <li><a href="<%= menu.url %>"><%= menu.name %></a></li>
                        <% end %>  
                    <% end %>             
                    </ul>
                </div>
            </div><!--/.container-->
        </nav><!--/nav-->
		
    </header><!--/header-->
